@model PassPast.ViewModels.CoursesViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
	<script src="~/Scripts/script.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>

<div class="panel-group hidden-top-sidebar">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse1">Show/Hide Menu</a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div>
                <br />
                <h3>Courses</h3>
                @foreach (var course in ViewBag.Courses)
                {
                    <a href="../Papers/Index?CourseCode=@course.Code">
                        <h4 class="sidebar-div">@course.Name</h4>
                    </a>
                }
				<p class="sidebar-tip"><br />Don't see your course?</p>
				<a href="../Home/New" class="sidebar-btn btn btn-default" role="button">add new</a>
            </div>
        </div>
    </div>
</div>
   
<div class="col-md-2 sidebar">
    <h3>Pass Past</h3>
    <br />
    <br />
    <br />
    <h3>Courses</h3><br />
    @foreach (var course in ViewBag.Courses)
    {
        <a href="../Papers/Index?CourseCode=@course.Code">
            <h4 class="sidebar-div">@course.Name</h4>
        </a>
    }
    <p class="sidebar-tip"><br />Don't see your course?</p>
    <a href="../Home/New" class="sidebar-btn btn btn-default" role="button">add new</a>
</div>

<div class="body-content col-md-10">
	@RenderBody()
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
@RenderSection("scripts", required: false)

</body>
</html>
